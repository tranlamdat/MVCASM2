@model IEnumerable<Product>
@{
	ViewData["Title"] = "Home Page";
}

<div class="jumbotron text-center" style="margin-bottom:0">
	<img src="~/img/4044eeb36d5096b29b19c8f1831d9997.jpg">
</div>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
	<a class="navbar-brand" href="#"></a>
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="collapse navbar-collapse" id="collapsibleNavbar">
		<ul class="navbar-nav">
			<li class="nav-item">
				<a class="nav-link" href="#"></a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="#"></a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="#"></a>
			</li>
		</ul>
	</div>
</nav>
<h1 class=>Product List</h1>
<section>
	<div class="row">
		@foreach (var item in Model)
		{
			<div class="col-3">
				<div class="product-f-image">
					<div class="d-flex justify-content-center">
						<img src="~/Uploads/@item.ProductImage" width="200" height="200">
					</div>
					<div class="mt-2 text-center">
						<a asp-route="addcart" asp-route-productid="@item.ProductId" class="btn btn-primary add-to-cart-link">
							<i class="fa fa-shopping-cart"></i> Add to Cart
						</a>
						<a href="#" class="btn btn-primary view-details-link">
							<i class="fa fa-link"></i> See details
						</a>
					</div>
				</div>
				<h2 class="text-center mt-2">
					<a class="card-title text-decoration-none">@item.Name</a> 
				</h2>
				<div class="product-carousel-price text-center">
					<ins>$@item.Price</ins>
					@*<del>{{p.OldPrice}}$</del>*@
				</div>
			</div>
		}
	</div>
</section>
