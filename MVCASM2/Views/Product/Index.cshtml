@model List<MVCASM2.Models.Product>
@{
	 ViewData["Title"] = "Profile";
    ViewData["Title"] = "Các sản phẩm";
}
<script>
	function deleteConfirm() {
		if (confirm("Are you sure to delete!")) {
			return true;
		} else {
			return false;
		}
	}
</script>
<a class="btn btn-primary" asp-controller="Product" asp-action="Create">Add New</a>

<table class="table table-hover">
	<tr>
		<th>ProductId</th>
		<th>Name</th>
		<th>Description</th>
		<th>Price</th>
		<th>CategoryId</th>
		<th>Image</th>
		<th></th>
	</tr>
	@foreach (var pro in Model)
	{
		<tr>
			<td>@pro.ProductId</td>
			<td>@pro.Name</td>
			<td>@pro.Description</td>
			<td>@pro.Price</td>
			<td>@pro.Cat_Id</td>
		    <td><img src="/Uploads/@pro.ProductImage" style ="width:130px;height:130px"/td>
			<td>
				<a asp-action="Edit" asp-route-id="@pro.ProductId">Edit</a>
				<a asp-action="Delete" asp-route-id="@pro.ProductId" onclick="return deleteConfirm()">Delete</a>
			</td>
		</tr>
	}
</table>

