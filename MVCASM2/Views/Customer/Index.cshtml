@model IEnumerable<Customer>
<script>
	function deleteConfirm() {
		if (confirm("Are you sure to delete!")) {
			return true;
		} else {
			return false;
		}
	}
</script>
<a class="btn btn-primary" asp-controller="Customer" asp-action="Create">Add New</a>

<table class="table table-hover">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Birthday</th>
		<th>Gender</th>
		<th>Address</th>
		<th></th>
	</tr>
	@foreach (var cus in Model)
	{
		<tr>
			<td>@cus.Cus_Id</td>
			<td>@cus.Cus_Name</td>
			<td>@cus.Cus_Birthday.ToShortDateString()</td>
			<td>@cus.Cus_Gender</td>
			<td>@cus.Cus_Address</td>
			<td>
				<a asp-action="Edit" asp-route-id="@cus.Cus_Id">Edit</a>
				<a asp-action="Delete" asp-route-id="@cus.Cus_Id" onclick="return deleteConfirm()">Delete</a>
			</td>
		</tr>
	}
</table>

